<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTab2"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center">


    <TextView
        android:id="@+id/text_masakan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingBottom="14dp"
        android:text="Silahkan Pilih Menu dibawah ini"
        android:textColor="@color/colorPutih"
        android:textSize="20sp" />
    -------------------------------Layout Kategori masakan

        <RelativeLayout
            android:id="@+id/layout_kategori_masakan1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/text_masakan"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">
            -----------------Card masakan pedas

            <android.support.v7.widget.CardView
                android:id="@+id/btnpesanbaju"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_margin="20dp"
                        android:src="@drawable/baju" />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="Profile Kandri"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <!--<View
                    android:id="@+id/View1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/text1"
                    android:background="@color/colorTab2" />-->
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            -----------------Card olahan daging


            <android.support.v7.widget.CardView
                android:id="@+id/btnkonfirm"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:src="@drawable/whatsapp" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="Konfirmasi admin"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp" />

                    <!--                <View
                                    android:id="@+id/View2"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_above="@+id/text2"
                                    android:background="@color/colorTab2"  />-->
                </RelativeLayout>
            </android.support.v7.widget.CardView>








        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_kategori_masakan2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/layout_kategori_masakan1"
            android:layout_marginLeft="15dp"
            android:gravity="center"

            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">
        -----------------Card masakan pedas


            <Button
                android:id="@+id/btn_logout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#ffffff"
                android:text="Logout" />
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>